@using WebProjectCourse.Models;
@model Categoria

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2>"
            <h2 class="text-primary">Apagar Categoria</h2>
            <hr/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=Nome class="p-0"></label>
            <input asp-for=Nome disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=OrdemDisplay class="p-0"></label>
            <input asp-for=OrdemDisplay disabled class="form-control" />
        </div>

        <div class="row">
            <div class="col-6" col-md-3>
                <button type="submit" class="btn btn-danger" form-control">Apagar</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Categoria" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Voltar a lista
                </a>
            </div>
        </div>


    </div>
</form>
