@using WebProjectCourse.Models;
@model List<Produto>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Lista de Produtos
            </h2>
        </div>
        <div class="col-6">
            <a asp-controller="Produto" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>Criar novo produto
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Produto
                </th>
                <th>
                    Autor
                </th>
                <th>
                    Preco
                </th>
                <th>
                    ISBN
                </th>
                <th>
                    Categoria
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.Titulo))
            {
                <tr>
                    <td>
                        @obj.Titulo
                    </td>
                    <td>
                        @obj.Autor
                    </td>
                    <td>
                        @obj.Preco
                    </td>
                    <td>
                        @obj.ISBN
                    </td>
                    <td>
                        @obj.CategoriaId
                    </td>

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Produto" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Alterar
                            </a>
                            <a asp-controller="Produto" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Apagar
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>